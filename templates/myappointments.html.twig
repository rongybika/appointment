{% extends "base.html.twig" %}

{% block title %}My appointments{% endblock %}

{% block head %}
{{ parent() }}
{% endblock %}

{% block content %}
{% if islogged %}
<span style="color:rgb(18, 92, 8)">{{message}}</span>
<h2>List of my appointments</h2>
<table style="width:50%">
    <tr>
        <th>Service name</th>
        <th>Start time</th>
        <th>Endig time</th>
        <th>Provider name</th>
    </tr>
    {% for item in appointments %}
    <tr>
        <td style="text-align:center">{{ item.name|e }}</td>
        <td style="text-align:center">{{ item.start_datetime|e }}</td>
        <td style="text-align:center">{{ item.end_datetime|e }}</td>
        <td style="text-align:center">{{ item[33]|e }}&nbsp;{{ item[34]|e }}</td>
    </tr>
    {% endfor %}
</table>
{% endif %}
{% endblock %}

{% block footer %}
{{ parent() }}
{% endblock %}